<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Manhunt.Mobile.Views.HomePage"
             Title="Home">
    <ScrollView>
        <VerticalStackLayout
      Padding="20"
      Spacing="20"
      VerticalOptions="Center">

            <!-- Dein Logo -->
            <Image
        Source="logo.png"
        Aspect="AspectFit"
        HeightRequest="150"
        HorizontalOptions="Center" />

            <!-- App-Name -->
            <Label
        Text="Manhunt App"
        FontSize="32"
        FontAttributes="Bold"
        HorizontalOptions="Center" />

            <!-- Trennlinie -->
            <BoxView
        HeightRequest="1"
        Color="Gray"
        HorizontalOptions="Fill" />

            <!-- Beschreibungstext -->
            <Label
        Text="Willkommen bei Manhunt – Deinem App-gestützten Outdoor-Suchspiel!"
        FontSize="18"
        HorizontalOptions="Center" />

            <Label
        Text="Mit Manhunt kannst du:
• Lobbys erstellen und beitreten
• Deine Spiel-Einstellungen anpassen
• Live-Standorte per Karte und Kompass verfolgen
• Und vieles mehr…"
        FontSize="16" />

            <!-- (später: Login/Register-Buttons etc.) -->
            <Button
        Text="Anmelden / Registrieren"
        Style="{StaticResource PrimaryButtonStyle}"
        Command="{Binding GoToLoginCommand}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>