<?xml version="1.0" encoding="utf-8" ?>
<Shell
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:views="clr-namespace:Manhunt.Mobile.Views"
  x:Class="Manhunt.Mobile.AppShell"
  Title="Manhunt">

    <TabBar>
        <ShellContent Title="Home"
                  Icon="home.png"
                  Route="HomePage"
                  ContentTemplate="{DataTemplate views:HomePage}" />
        <Tab Title="Lobby" Icon="lobby.png">
            <ShellContent 
                  Route="LobbyPage" 
                  ContentTemplate="{DataTemplate views:LobbyPage}" />

            <!-- die beiden Unterseiten in denselben Tab packen -->
            <ShellContent 
                  Route="JoinLobbyPage" 
                  ContentTemplate="{DataTemplate views:JoinLobbyPage}" />
            <ShellContent 
                  Route="CreateLobbyPage" 
                  ContentTemplate="{DataTemplate views:CreateLobbyPage}" />
        </Tab>
        <ShellContent Title="Settings"
                  Icon="settings.png"
                  Route="SettingsPage"
                  ContentTemplate="{DataTemplate views:SettingsPage}" />
    </TabBar>

</Shell>
