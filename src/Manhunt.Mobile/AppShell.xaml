<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Manhunt.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Manhunt.Mobile"
    Title="Manhunt.Mobile">

    <TabBar>
        <ShellContent Title="Home" Icon="icon_home.png"
                  ContentTemplate="{DataTemplate views:LoginPage}" />
        <ShellContent Title="Lobby" Icon="icon_lobby.png"
                  ContentTemplate="{DataTemplate views:LobbyListPage}" />
        <ShellContent Title="Settings" Icon="icon_settings.png"
                  ContentTemplate="{DataTemplate views:CreateLobbyPage}" />
    </TabBar> >
</Shell>
